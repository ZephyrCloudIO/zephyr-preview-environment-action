{
  "name": "zephyr-preview-environments-action",
  "version": "0.1.1",
  "description": "Create preview environments using Zephyr (PR-only action)",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --minify --outfile=index.js",
    "build:examples": "cd zephyr-examples/jarvis && pnpm i && pnpm run build && cd ../hal && pnpm i && pnpm run build",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "ZephyrCloudIO",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.30.1",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "zephyr-agent": "^0.1.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@types/node": "^24.0.3",
    "esbuild": "^0.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "typescript": "^5.8.3",
    "ultracite": "7.2.3"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1",
      "form-data": ">=4.0.4",
      "axios": ">=1.12.0"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  }
}
